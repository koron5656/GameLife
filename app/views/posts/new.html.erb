<div class ="container pt-3">
  <h1>投稿フォーム</h1>

  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <%= form_with model: @post do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title, class: "form-control" %>
        <h4>本文</h4>
        <%= f.text_area :posted_text, class: "form-control" %>
        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*", class: "form-control" %>

        <div class="form-group form-group_tags">
          <%= f.label :tag_list, "Tag", class: "form-label" %>
          <%= f.text_field :tag_list, value: @post.tag_list.join(","), class: "form-control", data: { role: "tagsinput" } %>
        </div>
        <br><br>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>

</div>